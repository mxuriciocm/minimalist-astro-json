---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <!-- Si el titulo existe, entonces se muestra -->
  <slot />
</section>

<style>
  p {
    color: hsl(220 8.9% 46.1%);
  }
  section {
    max-width: 700px;
    margin: 0 auto 30px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
</style>
